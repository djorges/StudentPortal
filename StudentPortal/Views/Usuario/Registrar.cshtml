@{
    ViewData["Title"] = "Registrar";
}
<div class="row justify-content-center mt-5">
    @* Form *@
    <div class="col-5">
        <div class="card">
            <div class="card-header">
                <h3 class="text-center">Registrar</h3>
            </div>
            <div class="card-body">
                    <form asp-action="Registrar" asp-controller="Usuario" method="post">
                        <div class="form-group">
                            <label for="nombre">Nombre</label>
                            <input type="text" class="form-control" id="nombre" value="@(ViewBag.Nombre != null ? ViewBag.Nombre : "")" name="Nombre" placeholder="Ingrese su nombre" required>
                        </div>
                        <div class="form-group mt-3">
                            <label for="correo">Correo electrónico</label>
                            <input type="email" class="form-control" id="correo" value="@(ViewBag.Correo != null ? ViewBag.Correo : "")" name="Correo" placeholder="Ingrese su correo" required>
                        </div>
                        <div class="form-group mt-3">
                            <label for="clave">Clave</label>
                            <input type="password" class="form-control" id="clave" name="Clave" placeholder="Ingrese su clave" required>
                        </div>
                        <div class="form-group mt-3">
                            <label for="confirm_clave">Confirmar Clave</label>
                            <input type="password" class="form-control" id="confirm_clave" name="ConfirmarClave" placeholder="Reingrese su clave" required>
                        </div>
                        @* Alert *@
                        @if (ViewBag.Mensaje != null)
                        {
                            var alertClass = ViewBag.Creado == null ? "alert-warning" : "alert-success";
                            <div class="alert @alertClass mt-3" role="alert">
                                <p>@ViewBag.Mensaje</p>
                            </div>

                            @*<script>
                                // Mostrar el alert
                                document.addEventListener('DOMContentLoaded', function () {
                                    var alert = document.getElementById('alert');
                                    alert.style.display = 'block'; // Muestra el alert

                                    // Ocultar después de 5 segundos
                                    setTimeout(function () {
                                        alert.style.display = 'none'; // Oculta el alert
                                    }, 5000);
                                });
                            </script>*@
                        }
                        <div class="mb-3 d-grid gap-2">
                            <button type="submit" class="btn btn-primary mt-4">Registrar</button>
                            <a class="btn btn-link" asp-action="Login" asp-controller="Usuario">¿Ya tienes una cuenta? Inicia sesión</a>
                        </div>
                    </form>
            </div>
        </div>
    </div>
</div>
