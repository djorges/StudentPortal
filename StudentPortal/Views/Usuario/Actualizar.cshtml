@{
    ViewData["Title"] = "Actualizar";
}

<div class="row justify-content-center mt-5">
    @* Form *@
    <div class="col-5">
        <div class="card">
            <div class="card-header">
                <h3 class="text-center">Restablecer Cotraseña</h3>
            </div>
            <div class="card-body">
                @if (ViewBag.Restablecido == null)
                {
                    <form asp-action="Actualizar" asp-controller="Usuario" method="post">
                        <input type="hidden" name="token" value="@ViewBag.Token"/>
                        
                        <div class="form-group mt-3">
                            <label for="clave">Ingresa una nueva contraseña</label>
                            <input type="password" class="form-control" id="clave" name="clave" placeholder="Ingrese su clave" required>
                        </div>
                        <div class="form-group mt-3">
                            <label for="confirm_clave">Confirmar Clave</label>
                            <input type="password" class="form-control" id="confirm_clave" name="confirmarClave" placeholder="Reingrese su clave" required>
                        </div>
                        @* Alert *@
                        @if (ViewBag.Mensaje != null)
                        {
                            <div class="alert alert-warning mt-3" role="alert">
                                <p>@ViewBag.Mensaje</p>
                            </div>
                        }
                        <div class="mb-3 d-grid gap-2">
                            <button type="submit" class="btn btn-primary mt-4">Cambiar contraseña</button>
                        </div>
                    </form>
                }
                else
                {
                    <div class="alert alert-success mt-3" role="alert">
                        <p>Su contraseña fue restablecida, ahora puede ingresar a su cuenta con su nueva clave.</p>
                        <a class="btn btn-success" asp-action="Login" asp-controller="Usuario">Ingresar</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>