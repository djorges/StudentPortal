@{
    ViewData["Title"] = "Restablecer";
}

<div class="row justify-content-center mt-5">
    @* Form *@
    <div class="col-5">
        <div class="card">
            <div class="card-header">
                <h3 class="text-center">Restablecer Cuenta</h3>
            </div>
            <div class="card-body">
                @if (ViewBag.Restablecido == null)
                {
                    <form asp-action="Restablecer" asp-controller="Usuario" method="post">
                        <p>Ingrese su dirección de correo electrónico y le enviaremos un enlace para restablecer su contraseña.</p>
                        <div class="form-group mt-3">
                            <label for="correo">Correo electrónico</label>
                            <input type="email" class="form-control" id="correo" name="correo" placeholder="Ingrese su correo" required>
                        </div>
                        @* Alert *@
                        @if (ViewBag.Mensaje != null)
                        {
                            <div class="alert alert-warning mt-3" role="alert">
                                <p>@ViewBag.Mensaje</p>
                            </div>
                        }
                        <div class="mb-3 d-grid gap-2">
                            <button type="submit" class="btn btn-primary mt-4">Restablecer</button>
                            <a class="btn btn-link" asp-action="Login" asp-controller="Usuario">Volver</a>
                        </div>
                    </form>
                }
                else
                {
                    <div class="alert alert-success mt-3" role="alert">
                        <p>Su contraseña fue restablecida, le enviamos un mensaje a su correo para restablecer.</p>
                        <a class="btn btn-success" asp-action="Login" asp-controller="Usuario">Ingresar</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>