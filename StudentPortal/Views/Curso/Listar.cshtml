@using StudentPortal.Entities
@model PaginacionResultado<Curso>
@{
     ViewData["Title"] = "Cursos";
}
<div class="container">
    <div class="row mt-3">
        <div class="col-3">
            @await Html.PartialAsync("_MenuPartialView")
        </div>
        <div class="col-9">
            <div class="row align-items-center mb-2">
                <h3>Listado de Cursos</h3>
            </div>
            @*Controls: Search, Filters, Order, Add New*@
            <div class="row my-3">
                <div class="col-6">
                    <form class="d-flex" role="search" method="get" asp-action="Listar" asp-controller="Curso">
                        <input class="form-control me-2" type="search" name="busquedaNombre" placeholder="Buscar Curso" aria-label="Search">
                        <button class="btn btn-outline-success align-items-center" type="submit">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                                <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0" />
                            </svg>
                        </button>
                    </form>
                </div>
                <div class="col-6 text-end">
                    <button type="button" class="btn btn-info text-white p-2" data-bs-toggle="collapse" data-bs-target="#form-filters" aria-expanded="false" aria-controls="form-filters">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-filter" viewBox="0 0 16 16">
                            <path d="M6 10.5a.5.5 0 0 1 .5-.5h3a.5.5 0 0 1 0 1h-3a.5.5 0 0 1-.5-.5m-2-3a.5.5 0 0 1 .5-.5h7a.5.5 0 0 1 0 1h-7a.5.5 0 0 1-.5-.5m-2-3a.5.5 0 0 1 .5-.5h11a.5.5 0 0 1 0 1h-11a.5.5 0 0 1-.5-.5" />
                        </svg>
                        Filtros
                    </button>
                </div>
            </div>
            <div class="collapse card card-body mb-2" id="form-filters">
                <form role="search" method="get" asp-action="Listar" asp-controller="Curso">
                    <select class="form-select mb-2" aria-label="Selecciona sede" name="sede">
                        <option value="" selected>Seleccione una sede</option>
                        <option value="Almagro">Almagro</option>
                        <option value="Monserrat">Monserrat</option>
                        <option value="Palermo">Palermo</option>
                        <option value="Flores">Flores</option>
                        <option value="Puerto Madero">Puerto Madero</option>
                    </select>
                    <select class="form-select mb-2" aria-label="Selecciona duracion" name="duracion">
                        <option value="" selected>Seleccione duración</option>
                        <option value="Cuatrimestral">Cuatrimestral</option>
                        <option value="Trimestral">Trimestral</option>
                        <option value="Intensivo">Intensivo</option>
                    </select>
                    <select class="form-select mb-2" aria-label="Selecciona creditos" name="creditos">
                        <option value="" selected>Seleccione créditos</option>
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                        <option value="6">6</option>
                        <option value="7">7</option>
                        <option value="8">8</option>
                    </select>
                    <div class="mb-2">
                        <label>Es Obligatorio:</label>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" name="obligatorio" type="checkbox" id="inlineCheckbox1" value="" checked>
                            <label class="form-check-label" for="inlineCheckbox1">Ninguno</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" name="obligatorio" type="checkbox" id="inlineCheckbox2" value="false">
                            <label class="form-check-label" for="inlineCheckbox2">No</label>
                        </div>
                        <div class="form-check form-check-inline">
                            <input class="form-check-input" name="obligatorio" type="checkbox" id="inlineCheckbox3" value="true">
                            <label class="form-check-label" for="inlineCheckbox3">Si</label>
                        </div>
                    </div>
                    <div class="d-flex justify-content-end">
                        <button class="btn btn-outline-success" type="submit">Aplicar</button>
                    </div>
                </form>
            </div>
            @*List*@
            <div class="row mb-3 mb-sm-0">
                 @foreach (var curso in Model.Elementos)
                {
                    <div class="col-sm-6 mb-3">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">@curso.Nombre  <span class="badge bg-secondary text-bg-primary">@curso.Codigo</span></h5>
                                <p class="card-text">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-geo-alt-fill" viewBox="0 0 16 16">
                                        <path d="M8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10m0-7a3 3 0 1 1 0-6 3 3 0 0 1 0 6" />
                                    </svg>
                                    Sede: @curso.Sede
                                </p>
                                <p class="card-text">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-building-fill" viewBox="0 0 16 16">
                                        <path d="M3 0a1 1 0 0 0-1 1v14a1 1 0 0 0 1 1h3v-3.5a.5.5 0 0 1 .5-.5h3a.5.5 0 0 1 .5.5V16h3a1 1 0 0 0 1-1V1a1 1 0 0 0-1-1zm1 2.5a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5zm3 0a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5zm3.5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5v-1a.5.5 0 0 1 .5-.5M4 5.5a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5zM7.5 5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5v-1a.5.5 0 0 1 .5-.5m2.5.5a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5zM4.5 8h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5v-1a.5.5 0 0 1 .5-.5m2.5.5a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5zm3.5-.5h1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-1a.5.5 0 0 1-.5-.5v-1a.5.5 0 0 1 .5-.5" />
                                    </svg>
                                    Aula: @curso.Aula
                                </p>
                                <p class="card-text">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-vcard-fill" viewBox="0 0 16 16">
                                        <path d="M0 4a2 2 0 0 1 2-2h12a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2zm9 1.5a.5.5 0 0 0 .5.5h4a.5.5 0 0 0 0-1h-4a.5.5 0 0 0-.5.5M9 8a.5.5 0 0 0 .5.5h4a.5.5 0 0 0 0-1h-4A.5.5 0 0 0 9 8m1 2.5a.5.5 0 0 0 .5.5h3a.5.5 0 0 0 0-1h-3a.5.5 0 0 0-.5.5m-1 2C9 10.567 7.21 9 5 9c-2.086 0-3.8 1.398-3.984 3.181A1 1 0 0 0 2 13h6.96q.04-.245.04-.5M7 6a2 2 0 1 0-4 0 2 2 0 0 0 4 0" />
                                    </svg>
                                    Profesor: @curso.Profesor.Nombre @curso.Profesor.Apellido
                                </p>
                                <p class="card-text">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-clock-fill" viewBox="0 0 16 16">
                                        <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0M8 3.5a.5.5 0 0 0-1 0V9a.5.5 0 0 0 .252.434l3.5 2a.5.5 0 0 0 .496-.868L8 8.71z" />
                                    </svg>
                                    Horarios: @curso.Horarios
                                </p>
                                @{
                                    var porcentaje = (int)Math.Round((double)curso.CantInscriptos / curso.MaxInscriptos * 100);
                                }
                                <div class="progress mb-3 w-100">
                                    <div class="progress-bar bg-success"
                                         role="progressbar"
                                         style="width: @porcentaje%;"
                                         aria-valuenow="@porcentaje"
                                         aria-valuemin="0"
                                         aria-valuemax="100">
                                        Inscriptos @curso.CantInscriptos/@curso.MaxInscriptos
                                    </div>
                                </div>
                                @*Opciones*@
                                <form method="post" class="d-flex justify-content-end" asp-action="Inscribir" asp-controller="Curso">
                                    <input name="cursoId" value="@curso.CursoId" hidden/>
                                    <button class="btn btn-success" type="submit"
                                        data-bs-toggle="tooltip" data-bs-placement="top" data-bs-title="Inscribir">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-paperclip" viewBox="0 0 16 16">
                                            <path d="M4.5 3a2.5 2.5 0 0 1 5 0v9a1.5 1.5 0 0 1-3 0V5a.5.5 0 0 1 1 0v7a.5.5 0 0 0 1 0V3a1.5 1.5 0 1 0-3 0v9a2.5 2.5 0 0 0 5 0V5a.5.5 0 0 1 1 0v7a3.5 3.5 0 1 1-7 0z" />
                                        </svg>
                                        Inscribir
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <br />
            @*Pagination*@
            <div class="d-flex justify-content-between mb-3">
                <div class="text-muted">
                    Total: @Model.TotalElementos Cursos
                </div>
                <nav aria-label="Page navigation">
                    <ul class="pagination">
                        <li class="page-item">
                            <a class="page-link text-success"
                               asp-action="Listar" asp-controller="Curso"
                               asp-route-pagina="@(Model.PaginaActual - 1)"
                               asp-route-busquedaNombre="@Model.Filtros["BusquedaNombre"]"
                               asp-route-sede="@Model.Filtros["Sede"]"
                               asp-route-creditos="@Model.Filtros["Creditos"]"
                               asp-route-obligatorio="@Model.Filtros["Obligatorio"]"
                               asp-route-duracion="@Model.Filtros["Duracion"]" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                        @for(int i = 1; i<= Model.TotalPaginas; i++)
                        {
                            if ( i == Model.PaginaActual)
                            {
                                <li class="page-item">
                                    <a class="page-link bg-success text-white" 
                                        asp-action="Listar" asp-controller="Curso" 
                                        asp-route-pagina="@i"
                                       asp-route-busquedaNombre="@Model.Filtros["BusquedaNombre"]"
                                       asp-route-sede="@Model.Filtros["Sede"]"
                                       asp-route-creditos="@Model.Filtros["Creditos"]"
                                       asp-route-obligatorio="@Model.Filtros["Obligatorio"]"
                                       asp-route-duracion="@Model.Filtros["Duracion"]">
                                        @i
                                    </a>
                                </li>
                            }
                            else{
                                <li class="page-item">
                                    <a class="page-link text-success"
                                       asp-action="Listar" asp-controller="Curso"
                                       asp-route-pagina="@i"
                                       asp-route-busquedaNombre="@Model.Filtros["BusquedaNombre"]"
                                       asp-route-sede="@Model.Filtros["Sede"]"
                                       asp-route-creditos="@Model.Filtros["Creditos"]"
                                       asp-route-obligatorio="@Model.Filtros["Obligatorio"]"
                                       asp-route-duracion="@Model.Filtros["Duracion"]">
                                       @i
                                    </a>
                                </li>
                            }
                        }
                        <li class="page-item">
                            <a class="page-link text-success"
                               asp-action="Listar" asp-controller="Curso"
                               asp-route-pagina="@(Model.PaginaActual + 1)"
                               asp-route-busquedaNombre="@Model.Filtros["BusquedaNombre"]"
                               asp-route-sede="@Model.Filtros["Sede"]"
                               asp-route-creditos="@Model.Filtros["Creditos"]"
                               asp-route-obligatorio="@Model.Filtros["Obligatorio"]"
                               asp-route-duracion="@Model.Filtros["Duracion"]" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>